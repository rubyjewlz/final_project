<h1>Track Index</h1>
<table>
	<tr>
		<th>Track URL</th>
		
		<th colspan="2"></th>
	</tr>
	<% @tracks.each do |track| %>
	<tr>
		
		<td><%= track.url %></td>

		<td>
			<% if current_user == track.user %>

				<%= link_to 'Delete', track_path(track),
						method: :delete,
						data: {confirm: 'Are you sure?'} %>
			<% end %>
		</td>
	<% end %>
	</tr>
</table>